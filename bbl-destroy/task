#!/bin/bash -xeu

# shellcheck disable=SC1091
source cf-deployment-concourse-tasks/shared-functions

function commit_bbl_state_dir {
  local root_dir
  root_dir="${1}"

  pushd "${root_dir}/env-repo/${BBL_STATE_DIR}"
    if [[ -n $(git status --porcelain) ]]; then
      set_git_config
      git add --all .
      git commit -m "Remove bbl state dir"
    fi
  popd

  pushd "${root_dir}"
    cp -R env-repo updated-env-repo
  popd
}

function main() {
  local root_dir
  root_dir="${1}"

  pushd "env-repo/${BBL_STATE_DIR}"
    bbl \
      --debug \
      destroy \
      --no-confirm \
      --skip-if-missing > "${root_dir}"/bbl_destroy.txt
  popd

  close_bbl_ssh_connection
}

trap "commit_bbl_state_dir ${PWD}" EXIT

main ${PWD}
